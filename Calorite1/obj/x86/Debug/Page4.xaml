<Page
    x:Class="Calorite1.Page4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calorite1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Red">
        <TextBlock x:ConnectionId='1' x:Name="textBlock1" HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" Text="How active are you?" VerticalAlignment="Top" FontSize="20" Foreground="White"/>
        <Button x:ConnectionId='2' x:Name="button1" Content="Not Very Active" HorizontalAlignment="Stretch" Margin="0,172,0,0" VerticalAlignment="Top"                       Foreground="White"/>
        <TextBlock x:ConnectionId='3' x:Name="textBlock2" HorizontalAlignment="Center" Margin="0,202,0,0" TextWrapping="Wrap" Text="Spends most of the day sitting (e.g. bus driver, receptionist, programmer)" VerticalAlignment="Top" Foreground="White" FontSize="12" Width="300"/>
        <Button x:ConnectionId='4' x:Name="button2" Content="Lightly Active" HorizontalAlignment="Stretch" Margin="0,242,0,0" VerticalAlignment="Top"                       Foreground="White"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock3" HorizontalAlignment="Center" Margin="0,272,0,0" TextWrapping="Wrap" Text="Spend a good part of the day on your feet (e.g. teacher, salesman) " VerticalAlignment="Top" Foreground="White" FontSize="12" Width="300"/>
        <Button x:ConnectionId='6' x:Name="button3" Content="Quite Active" HorizontalAlignment="Stretch" Margin="0,312,0,0" VerticalAlignment="Top"                       Foreground="White"/>
        <TextBlock x:ConnectionId='7' x:Name="textBlock4" HorizontalAlignment="Center" Margin="0,342,0,0" TextWrapping="Wrap" Text="Spend a good part of the day doing some physical activity (e.g. Mailmen, Flight Attendants) " VerticalAlignment="Top" Foreground="White" FontSize="12" Width="300"/>
        <Button x:ConnectionId='8' x:Name="button4" Content="Very Active" HorizontalAlignment="Stretch" Margin="0,382,0,0" VerticalAlignment="Top"                       Foreground="White"/>
        <TextBlock x:ConnectionId='9' x:Name="textBlock5" HorizontalAlignment="Center" Margin="0,412,0,0" TextWrapping="Wrap" Text="Spends most of the day doing heavy physcial activity (e.g Construction Workers, Waiters etc.)" VerticalAlignment="Top" Foreground="White" FontSize="12" Width="300"/>
    </Grid>
</Page>

