<Page
    x:Class="Calorite1.BlankPage3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calorite1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" Text="Details" VerticalAlignment="Top" FontSize="24"/>
        <TextBlock x:ConnectionId='2' x:Name="textBlock1" HorizontalAlignment="Left" Margin="40,126,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" />
        <TextBox x:ConnectionId='3' x:Name="textBox1" HorizontalAlignment="Left" Margin="184,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" PlaceholderText="you@email.com"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock2" HorizontalAlignment="Left" Margin="40,176,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" />
        <TextBox x:ConnectionId='5' x:Name="textBox2" HorizontalAlignment="Left" Margin="184,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" PlaceholderText="Min. 6 characters"/>
        <TextBlock x:ConnectionId='6' x:Name="textBlock3" HorizontalAlignment="Left" Margin="40,226,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" />
        <TextBox x:ConnectionId='7' x:Name="textBox3" HorizontalAlignment="Left" Margin="184,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" PlaceholderText="Choose Username"/>
        <TextBlock x:ConnectionId='8' x:Name="textBlock4" HorizontalAlignment="Left" Margin="40,276,0,0" TextWrapping="Wrap" Text="Country" VerticalAlignment="Top" />
        <ComboBox x:ConnectionId='9' x:Name="combobox" HorizontalAlignment="Left" Margin="184,271,0,0" VerticalAlignment="Top" Width="150" />
        <Button x:ConnectionId='10' x:Name="button" Content="Sign Up" HorizontalAlignment="Center" Margin="0,360,0,0" VerticalAlignment="Top"                     />

    </Grid>
</Page>

